<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.ui.theme" value="simple" />

	<package name="com.internousdevwork.knit.action" extends="struts-default">


	<action name="ResetPasswordAction"
			class="com.internousdev.knit.action.ResetPasswordAction" method="execute">
			<result name="success">resetPassword.jsp</result>
			<result name="error">resetPassword.jsp</result>

		</action>


		<action name="ResetPasswordCompleteAction"
			class="com.internousdev.knit.action.ResetPasswordCompleteAction"
			method="execute">
			<result name="success">resetPasswordComplete.jsp</result>
			<result name="error">resetPassword.jsp</result>

		</action>


		<action name="ResetPasswordConfirmAction"
			class="com.internousdev.knit.action.ResetPasswordConfirmAction"
			method="execute">
			<result name="success">resetPasswordConfirm.jsp</result>
			<result name="error">resetPassword.jsp</result>

		</action>



	</package>

</struts>