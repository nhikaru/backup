
public class Car {
//フィールド
public int speed;
public double gas;

//メソッド
//加速させるメソッド
public void speedUp(int sp){
	//ガソリンを減らす
	this.gas -= sp/10.0;
	if(this.gas<0){//ガソリンがマイナスになる場合
	//ガソリンを0に補正し、スピードを増やさない
	this.gas = 0;
	}else{
		//スピードを増やす
		this.speed += sp;
	}
}
//減速させるメソッド
public void speedDown(int sp){
	//スピードを減らす
	this.speed-=sp;
	if(this.speed<0){	//スピードがマイナスになる場合
		//スピードを0に補正する
		this.speed=0;
	}
}

}